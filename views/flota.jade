doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        link(rel='stylesheet', type='text/css', href='/stylesheets/style.css')

        title Home
    body
        ul
            li
                a(href='/home') Home

            li
                a(href='/flota') Flota

            li
                a(href='/admin') Administration
            li
                a(href='/reserve') Reserve


        ul
            li
                a(href='/edit') Edit Reservation
            li
                a(href='/displayMyReservations') Display My Reservation
            li
                a(href='/cancelReservation') Cancel Reservation


    tbody
        h1 Flota
        img(src='public/images/kia_pinceto.png')
        div
            each item in cars
                p #{item.car_name}
                img(src=item.img_link, alt=item.car_name)
                p #{item.img_link}
                p Typ: #{item.car_type}
                p Klasa cenowa: #{item.cost_class}
                p Cena za dzień: #{item.price_per_day}
                p Klimatyzacja: #{item.air_conditioning}
                p Ilość siedzień: #{item.number_of_seats}
                p Silnik: #{item.engine_type}
                p Skrzynia biegów:#{item.transmission}
                p Bluetooth: #{item.bluetooth}




