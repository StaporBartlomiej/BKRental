doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        link(rel='stylesheet', type='text/css', href='/stylesheets/style.css')

        title Home
    body
        ul
            li
                a(href='/home') Home

            li
                a(href='/flota') Flota

            li
                a(href='/admin') Administration
            li
                a(href='/reserve') Reserve
            li
                a(href='/search') Search


    tbody
        h1 Flota
        img(src='public/images/kia_pinceto.png')
        div
            each city in cars
                p #{city.car_name}
                img(src=city.img_link, alt=city.car_name)
                p #{city.img_link}
                p Typ: #{city.car_type}
                p Klasa cenowa: #{city.cost_class}
                p Cena za dzień: #{city.price_per_day}
                p Klimatyzacja: #{city.air_conditioning}
                p Ilość siedzień: #{city.number_of_seats}
                p Silnik: #{city.engine_type}
                p Skrzynia biegów:#{city.transmission}
                p Bluetooth: #{city.bluetooth}




