doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        link(rel='stylesheet', type='text/css', href='/stylesheets/style.css')

        title #{title}
    body
        ul
            li
                a(href='/') Fleet
            if logged == 1
                li
                    a(href='/admin') Administration
            li
                a(href='/reserve') Reserve
            if logged
                li
                    a(href='logout') Logout
        ul
            li
                a(href='/edit') Edit Reservation
            li
                a(href='/displayMyReservations') Display My Reservation
            li
                a(href='/cancelReservation') Cancel Reservation


        div
            table#reservations
                thead
                    tr
                        th Reservatiom ID
                        th User ID
                        th Car ID
                        th Reservation date
                        th Return date
                        th Total costs
                        th Confirmed
                        th Pick up place
                        th Return place
                tbody
                    each item in reservation
                        tr
                            td #{item.id}
                            td #{item.userId}
                            td #{item.carId}
                            td #{item.bookInDate}
                            td #{item.bookOutDate}
                            td #{item.totalPrice}
                            td #{item.isApprovedByAdmin}
                            td #{item.bookInPlace}
                            td #{item.bookOutPlace}
